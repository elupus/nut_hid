{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "shell": {
            "executable": "cmd.exe",
            "args": [
                "/d", "/c"
            ]
        }
    },
    "tasks": [
        {
            "label": "Deploy",
            "type": "shell",
            "command": "scripts\\deploy.bat",
            "args": [
                "target\\debug\\nut_hid_package",
                "${config:nut-hid.target_host}",
                "${config:nut-hid.target_path}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install",
            "type": "shell",
            "command": "ssh",
            "args": [
                "${config:nut-hid.target_host}",
                "${config:nut-hid.target_path}\\install.bat"
            ],
            "problemMatcher": []
        },
        {
            "label": "Add",
            "type": "shell",
            "command": "ssh",
            "args": [
                "-t",
                "${config:nut-hid.target_host}",
                "${config:nut-hid.target_host}\\add.bat"
            ],
            "isBackground": true,
            "problemMatcher": [],
        },
        {
            "label": "Deploy & Install",
            "dependsOn": ["Deploy", "Install"],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}